<h1>Your Cart</h1>

<% if notice %>
  <p><%= notice %></p> 
<% end %>

<% current_cart.line_items.each do |i| %>
  <p><%= link_to i.item.title, item_path(i.item) %> | <%= number_to_currency(i.item.price.to_f/100) %> | Quantity: <%= i.quantity %> | <% if i.item.inventory < 5 %>
    <strong>There are only <%= line_item.item.inventory %> left in stock.</strong>
  <% end %> </p>
<% end %>

<p>Order total: <strong><%= number_to_currency(current_cart.total.to_f/100) %></strong> </p>

<%= button_to 'Checkout', checkout_path %>